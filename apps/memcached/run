cd $XTERN_ROOT/apps/memcached
rm -rf out* serializer.log

APP=$XTERN_ROOT/apps/memcached/memcached

#./memcached -d -p 20000 -t 4 -m 256 &
# Run with xtern and draw time chart.
LD_PRELOAD=$XTERN_ROOT/dync_hook/interpose.so $APP -d -p 20000 -t 4 -m 256 &

LD_PRELOAD=$XTERN_ROOT/dync_hook/interpose.so $APP -d -p 20001 -t 8 -m 256 &

LD_PRELOAD=$XTERN_ROOT/dync_hook/interpose.so $APP -d -p 20002 -t 16 -m 256 &

./memtier_benchmark -P memcache_binary -p 20000 -n 100000
sleep 2;
./memtier_benchmark -P memcache_binary -p 20001 -n 100000
sleep 2;
./memtier_benchmark -P memcache_binary -p 20002 -n 100000

# Run non-det and draw time chart.
#LD_NOT_PRELOAD=$XTERN_ROOT/eval/rand-intercept/rand-intercept.so $APP -P memcache_binary -p 20000
